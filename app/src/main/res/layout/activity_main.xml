<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <LinearLayout
       android:padding="2dp"
       android:layout_margin="5dp"
       android:layout_alignParentEnd="true"
       android:id="@+id/cash"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="end"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="20dp"
           android:layout_toLeftOf="@id/cashTextView"
           android:text="Credit : $"
           android:textColor="@color/white"
           android:textSize="18sp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/cashTextView"
           android:textSize="18sp"
           android:textColor="@color/white"
           />

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cash"
        android:orientation="vertical"
        android:id="@+id/choiceplace"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_choose_a_place_for_parking"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/best"
            />


    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_below="@+id/choiceplace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/places"
        android:layout_marginBottom="50dp"
        >
        <include
            layout="@layout/design_main_page"
            />

    </LinearLayout>


</RelativeLayout>